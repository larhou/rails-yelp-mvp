<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name, label: 'Name of the restaurant please', error: 'Name is mandatory, please specify one'%>
    <%= f.input :address, label: 'Address of the restaurant please', error: 'Address is mandatory, please specify one'%>
    <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
    <%= f.button :submit, class: 'class="btn btn-primary' %>
  <% end %>
</div>
